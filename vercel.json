{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "client/dist",
    "framework": "vite",
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*).(jpg|jpeg|png|webp|svg|gif|ico|mp3|wav|ogg)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, stale-while-revalidate=86400"
                }
            ]
        },
        {
            "source": "/robots.txt",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        }
    ]
}